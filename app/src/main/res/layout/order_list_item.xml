<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_curve_bg"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/car_imageView"
        android:background="#E4D5D5"
        android:layout_width="60dp"
        android:layout_margin="16dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_toStartOf="@id/status_of_order"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/car_imageView">

        <TextView
            android:text="Car 1"
            android:textSize="22sp"
            android:fontFamily="@font/work_sans_extra_bold_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_name"/>

        <TextView
            android:text="Antriksh Telang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_name"/>

        <TextView
            android:text="sdfsdfdf234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_id"/>

    </LinearLayout>

    <TextView
        android:id="@+id/status_of_order"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>